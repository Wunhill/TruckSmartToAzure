@model TruckSmartWeb.Models.Shipment

@{
    ViewBag.Title = "ReserveShipment";
}

<h2>Reserve Shipment</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Shipment</h4>
        <hr />
        @Html.HiddenFor(model => model.ShipmentID)
        <input type="hidden" name="Reserve" value="true" />

        <h4>Do you want to reserve this shipment?</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Shipper Name</dt>
            <dd>@Html.DisplayFor(model => model.From.Name)</dd>
            <dt>Shipper Address</dt>
            <dd>@Html.DisplayFor(model => model.From.Address)</dd>
            <dt>Shipper Geo-Location (Latitude/Longitude)</dt>
            <dd>@Html.DisplayFor(model => model.From.Latitude) | @Html.DisplayFor(model => model.From.Longitude)</dd>
            <dt>Destination Name</dt>
            <dd>@Html.DisplayFor(model => model.To.Name)</dd>
            <dt>Destination Address</dt>
            <dd>@Html.DisplayFor(model => model.To.Address)</dd>
            <dt>Destination Geo-Location (Latitude/Longitude)</dt>
            <dd>@Html.DisplayFor(model => model.To.Latitude) | @Html.DisplayFor(model => model.To.Longitude)</dd>

            <dt>
                @Html.DisplayNameFor(model => model.Scheduled)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Scheduled)
            </dd>



        </dl>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Reserve" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
